<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" version="3.7" group="fields" method="upgrade">
	<name>plg_fields_dpfgallery</name>
	<author>Digital Peak</author>
	<creationDate>May 2017</creationDate>
	<copyright>(C) 2015 - 2017 Digital Peak. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>info@digital-peak.com</authorEmail>
	<authorUrl>joomla.digital-peak.com</authorUrl>
	<version>2.0.2</version>
	<description>PLG_FIELDS_DPFGALLERY_XML_DESCRIPTION</description>
	<files>
		<filename plugin="dpfgallery">dpfgallery.php</filename>
		<folder>fields</folder>
		<folder>language</folder>
		<folder>params</folder>
		<folder>tmpl</folder>
	</files>
	<media destination="plg_fields_dpfgallery" folder="media">
		<folder>js</folder>
		<folder>css</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="thumbnail_width" type="text" default="64" label="PLG_FIELDS_DPFGALLERY_PARAMS_THUMBNAIL_WIDTH_LABEL"
				       description="PLG_FIELDS_DPFGALLERY_PARAMS_THUMBNAIL_WIDTH_DESC" size="5"/>
				<field name="max_width" type="text" label="PLG_FIELDS_DPFGALLERY_PARAMS_MAX_WIDTH_LABEL"
				       description="PLG_FIELDS_DPFGALLERY_PARAMS_MAX_WIDTH_DESC" size="5"/>
				<field name="max_height" type="text" label="PLG_FIELDS_DPFGALLERY_PARAMS_MAX_HEIGHT_LABEL"
				       description="PLG_FIELDS_DPFGALLERY_PARAMS_MAX_HEIGHT_DESC" size="5"/>
				<field name="recursive" type="radio" class="btn-group btn-group-yesno" default="1" label="PLG_FIELDS_DPFGALLERY_PARAMS_RECURSIVE_LABEL"
				       description="PLG_FIELDS_DPFGALLERY_PARAMS_RECURSIVE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="multiple" type="radio" class="btn-group btn-group-yesno" default="0" label="PLG_FIELDS_DPFGALLERY_PARAMS_MULTIPLE_LABEL"
				       description="PLG_FIELDS_DPFGALLERY_PARAMS_MULTIPLE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="directory" type="folderlist" directory="images" hide_none="true" recursive="true" hide_default="true"
				       label="PLG_FIELDS_DPFGALLERY_PARAMS_DIRECTORY_LABEL" description="PLG_FIELDS_DPFGALLERY_PARAMS_DIRECTORY_DESC">
					<option></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
