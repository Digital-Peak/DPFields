	<authorUrl>joomla.digital-peak.com</authorUrl>
	<version>2.0.3</version>
	<description>PLG_FIELDS_DPFMEDIA_XML_DESCRIPTION</description>
	<files>
		<filename plugin="dpfmedia">dpfmedia.php</filename>
		<folder>fields</folder>
		<folder>language</folder>
		<folder>params</folder>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="directory" type="folderlist" directory="images" hide_none="true" recursive="true"
				       label="PLG_FIELDS_DPFMEDIA_PARAMS_DIRECTORY_LABEL" description="PLG_FIELDS_DPFMEDIA_PARAMS_DIRECTORY_DESC"/>
				<field name="preview" type="list" class="btn-group" default="tooltip" label="PLG_FIELDS_DPFMEDIA_PARAMS_PREVIEW_LABEL"
				       description="PLG_FIELDS_DPFMEDIA_PARAMS_PREVIEW_DESC">
					<option value="tooltip">PLG_FIELDS_DPFMEDIA_PARAMS_PREVIEW_TOOLTIP</option>
					<option value="true">PLG_FIELDS_DPFMEDIA_PARAMS_PREVIEW_INLINE</option>
					<option value="false">JNO</option>
				</field>
				<field name="home" type="list" default="0" label="PLG_FIELDS_DPFMEDIA_PARAMS_HOME_LABEL"
				       description="PLG_FIELDS_DPFMEDIA_PARAMS_HOME_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="image_class" type="textarea" label="PLG_FIELDS_DPFMEDIA_PARAMS_IMAGE_CLASS_LABEL"
				       description="PLG_FIELDS_DPFMEDIA_PARAMS_IMAGE_CLASS_DESC" size="40"/>
			</fieldset>
		</fields>
	</config>
